@using System.Web.Optimization
<!DOCTYPE html>

<html>



<head>

    <link rel="shortcut icon" href="~/Content/images/faviicon.png" />

    <meta name="IndisStyle" content="Web developer, webutvikler web design" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css")

    <!-- All JavaScript at the bottom, except this Modernizr build.
       Modernizr enables HTML5 elements & feature detects for optimal performance.
       Create your own custom Modernizr build: www.modernizr.com/download/ -->
    @Scripts.Render("~/bundles/modernizr")

    <title>@ViewBag.Title</title>
</head>
<body>



    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">

                <a href="~/home">

                    <img style="width: 40px" src="~/Content/images/diamant.png" /><img src="~/Content/images/indisstyle.png" />

                </a>

                <div class="navbar-collapse collapse top-right">






                    <ul class="nav">
                        <li class="active">
                            <a href="~/home">Hjem</a>
                        </li>
                        <li class="">
                            <a href="~/home/omMeg">Om meg</a>
                        </li>
                        <li class="">
                            <a href="~/home/arbeidsform">Arbeidsform</a>
                        </li>
                        <li class="">
                            <a href="~/home/arkiv">Arkiv</a>
                        </li>
                        <li class="">
                            <a href="~/home/prisliste">Prisliste</a>
                        </li>

                    </ul>
                </div>










            </div>
        </div>
    </div>

    <div>




        <div class="sidebar" style="margin-top:0px;padding-top:0px">
            <div class="sidebar-dropdown"><a href="#">Navigation</a></div>
            <div class="sidebar-inner">

                <!-- Search form -->
                <div class="sidebar-widget">
                    <form class="form-inline">
                        <div class="input-append row-fluid">
                            <input type="text" class="span8" placeholder="Search">
                            <button type="submit" class="btn btn-info">Search</button>
                        </div>
                    </form>
                </div>
                <!--- Sidebar navigation -->
                <!-- If the main navigation has sub navigation, then add the class "has_submenu" to "li" of main navigation. -->
                <ul class="navi">
                    <!-- Use the class nred, ngreen, nblue, nlightblue, nviolet or norange to add background color. You need to use this in <li> tag. -->
                    <li class="nred"><a href="~/home/lagenkravspek"><i class="icon-desktop"></i> Lag en kravspek</a></li>
                    <li class="ngreen"><a href="charts.html"><i class="icon-bar-chart"></i>  Eksempler på sider</a></li>
                    <!-- Menu with sub menu -->
                    <li class="has_submenu nlightblue current open">
                        <a href="#">
                            <!-- Menu name with icon -->
                            <i class="icon-th"></i> Utseende
                            <!-- Icon for dropdown -->
                            <span class="pull-right"><i class="icon-angle-right"></i></span>
                        </a>
                        <ul>
                            <li class="active"><a href="widgets1.html"> Meny</a></li>
                            <li><a href="widgets2.html"> Banner</a></li>
                            <li><a href="widgets2.html"> Content</a></li>
                            <li><a href="widgets2.html"> Footer</a></li>
                            <li><a href="widgets2.html"> Submeny</a></li>
                        </ul>
                    </li>


                    <li class="has_submenu nviolet">
                        <a href="#">
                            <i class="icon-file-alt"></i> Stil
                            <span class="pull-right"><i class="icon-angle-right"></i></span>
                        </a>

                    </li>

                    <li class="norange"><a href="ui.html"><i class="icon-sitemap"></i> Prisliste</a></li>


                </ul>



            </div>





        </div>
        @RenderBody()
    </div>





    <!--
    When bundling, load in this sequence:
    1) shivs and jQuery
    2) 3rd party libraries
    3) require.js
    4) your app libraries
    5) main.js
    -->
    @Scripts.Render(
        "~/bundles/jquery",
        "~/bundles/jsextlibs",
        "~/bundles/jslibs"
    )








</body>
</html>
